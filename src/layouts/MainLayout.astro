---
import Footer from "@components/MainLayout/Footer.astro";
import Header from "@components/MainLayout/Header.astro";
import "@styles/utils.css";
import "@styles/tailwind.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="mx-auto flex min-h-screen max-w-3xl flex-col px-8 pt-16 font-mono selection:bg-accent-light dark:bg-background dark:text-text"
  >
    <Header />
      <slot />
    <Footer />
  </body>
</html>
