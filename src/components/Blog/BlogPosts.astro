---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<h1 class="text-4xl font-bold">Posts</h1>
<div class="py-3 flex flex-col gap-y-2 text-xl">
  {
    posts.map((p) => (
      <a
        class="flex flex-col gap-x-5  md:flex-row"
        href={`/blog/${p.slug}`}
      >
        <p class="italic text-accent-light md:text-accent">
          {p.data.date.toLocaleDateString(undefined, {
            dateStyle: "long",
          })}
        </p>
        <p class="underline underline-offset-4">{p.data.title.toLocaleUpperCase()} </p>
      </a>
    ))
  }
</div>
